<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@color/background_color"
    tools:context="com.example.administrator.e_pic.RegisterActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registreer_capital"
        android:textColor="@color/titles_activities"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingBottom="10sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/omkadering">
    <EditText
        android:id="@+id/first_name_edit_text"
        android:textColor="@color/titles_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/voornaam"/>
    <EditText
        android:textColor="@color/titles_activities"
        android:id="@+id/achternaam_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/achternaam"/>

    <EditText
        android:id="@+id/username_edit_text"
        android:textColor="@color/titles_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/loginnaam"/>
    <EditText
        android:id="@+id/password_edit_text"
        android:textColor="@color/titles_activities"
        android:password="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password"/>
    </LinearLayout>
    <Button
        android:id="@+id/register_button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button" />


</LinearLayout>
