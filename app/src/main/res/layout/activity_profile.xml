<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_color"
    tools:context="com.example.administrator.e_pic.ProfileActivity">
    <TextView
        android:id="@+id/my_name_text_view_profile_activity"
        android:textColor="@color/titles_activities"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>
    <ImageView
        android:id="@+id/my_profile_picture_profile_activity"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/my_name_text_view_profile_activity"
        android:src="@drawable/friends"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/number_of_sneezes_text_view_profile_activity"
        android:layout_below="@id/my_profile_picture_profile_activity"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/friends_list_profile_activity"
        android:background="@drawable/omkadering"
        android:layout_marginTop="10dp"
        android:layout_below="@id/number_of_sneezes_text_view_profile_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>



</RelativeLayout>
