<android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/i_sneeze_swiper"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">
    <ScrollView
        android:id="@+id/i_sneeze_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <com.google.android.gms.maps.MapView android:id="@+id/mapview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <TextView
                android:id="@+id/my_name_textview"
                android:background="@drawable/my_name_i_sneeze_fragment_background"
                android:padding="10dp"

                android:text="jaio"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/titles_activities"
                android:textStyle="bold"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/i_sneeze_button_i_sneeze_fragment"
                android:layout_centerHorizontal="true"
                android:background="@drawable/add_sneeze_button"
                android:text="+"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="45sp"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                android:layout_alignParentBottom="true"
                android:layout_width="65dp"
                android:layout_height="65dp" />
        </RelativeLayout>
    </ScrollView>



</android.support.v4.widget.SwipeRefreshLayout>