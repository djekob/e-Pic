<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.e_pic.iSneezeActivity"
    android:orientation="vertical"
    android:background="@color/background_color"
    style="@style/TextAppearance.AppCompat.Button">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/i_sneeze_swiper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">
    <ScrollView
        android:id="@+id/i_sneeze_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_gravity="center|"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <TextView
                android:id="@+id/my_name_textview"
                android:text="skqmljf"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/titles_activities"
                android:textStyle="bold"
                android:typeface="monospace"
                android:textSize="26sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/isneeze_image_button"
                android:background="@null"
                android:src="@drawable/sneeze_icon_60x60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/location_text_view"
                android:layout_below="@id/isneeze_image_button"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>
